            "divider": {
                "enabled": false,
                "style": "blank"
            }
        },
        {
            "id": "invoice-meta",
            "type": "two_column",
            "column1": [],
            "column2": [
                {
                    "key": "Invoice #",
                    "value": "1234567890"
                },
                {
                    "key": "Invoice Date",
                    "value": "12/21/2025"
                },
                {
                    "key": "PO#",
                    "value": "23435567"
