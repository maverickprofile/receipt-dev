            "divider": {
                "enabled": false,
                "style": "blank"
            }
        },
        {
            "id": "bill-ship-to",
            "type": "two_column",
            "column1": [
                {
                    "key": "BILL TO",
                    "value": "John Doe\nCalifornian Street"
                }
            ],
            "column2": [
                {
                    "key": "SHIP TO",
                    "value": "William Vengance\nCanada"
                }
            ],
            "divider": {
                "enabled": true,
                "style": "bold"
            }
        },
        {
